{
  "manifest_version": 3,
  "name": "Real time audio transcriber",
  "version": "1.0.0",
  "description": "AI-powered real-time audio transcription from browser tabs and microphone using Google Gemini API",
  "permissions": [
    "activeTab",
    "tabs",
    "tabCapture",
    "storage",
    "sidePanel"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "resources": ["audio_processor_worklet.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "Real time audio transcriber"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}